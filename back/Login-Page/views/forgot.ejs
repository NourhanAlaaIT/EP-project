
<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <div class="card card-body">
            <form action="/forgot" method="post">
                <legend>Forgot Password</legend>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" value="Reset Password" class="btn btn-outline-info">
                </div>
            </form>
            <p class="lead mt-4">No Account? <a class="btn-outline-info" href="/users/register">Register</a></p>
            <p><a class="btn-outline-info" href="/users/login">Login</a></p>
        </div>
    </div>
</div>